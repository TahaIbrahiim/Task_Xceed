@model Product

@{
    ViewData["Title"] = "Product Details";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="~/css/ProductDetails.css" rel="stylesheet" />

<div class="container my-5">
    <h1 class="mb-4 text-center">@Model.Name</h1>

    <div class="row">
      
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Product Information</h5>
                    <p><strong>ID:</strong> @Model.Id</p>
                    <p><strong>Creation Date:</strong> @Model.CreationDate</p>
                    <p><strong>Start Date:</strong> @Model.StartDate</p>
                    <p><strong>Duration:</strong> End after @Model.Duration days</p>
                    <p><strong>Price:</strong> $@Model.Price</p>
                    <p><strong>Created By:</strong> @ViewBag.CreatedByUserName</p>
                    <p><strong>Category:</strong> @Model.Category.Name</p>
                    

                    <div class="product-image"
                         style="height: 300px; background-size: cover; background-repeat: no-repeat; background-position: center;
                         @if (Model.Image != null) {
                                    <text>background-image: url('data:image/*;base64,@Convert.ToBase64String(Model.Image)');</text>
                                 } else {
                                    <text>background-image: url('https://via.placeholder.com/300');</text>
                                 }">
                    </div>

                    <p><strong>Last Update UserId:</strong> @Model.LastUpdatedByUserId</p>
                    <p><strong>Last Update DateTime:</strong> @Model.LastUpdatedDateTime</p>

                    <a class="btn btn-primary mt-3" asp-controller="Product" asp-action="Index">Back to List</a>
                </div>
            </div>
        </div>

        
        <div class="col-md-4">
           
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
